#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

echo "_Compiling_ Logstash package"

# parse args
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

# Declare Variables
LOGSTASH_VERSION =
AWS_SDK_VERSION =
SCRIPT_PATH = "/build.sh"

OUTPUT=$("$SCRIPT_PATH")
echo $OUTPUT

echo "Setting sqs MD5 checks to false - workaround for issue on heroku sqs"
sed -i "s/true,/false,/" $BUILD_DIR/$LOGSTASH_VERSION/vendor/bundle/jruby/1.9/gems/$AWS_SDK_VERSION/lib/aws/sqs/config.rb
echo "...done."
